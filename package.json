{
  "name": "leancloud-storage",
  "version": "5.0.0-beta.2",
  "description": "LeanCloud JavaScript SDK.",
  "keywords": [
    "leancloud",
    "storage"
  ],
  "author": {
    "name": "LeanCloud",
    "email": "support@leancloud.rocks"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/leancloud/javascript-sdk"
  },
  "scripts": {
    "clean": "rm -rf dist live-query/dist",
    "compile": "rollup -c rollup/rollup.config.js",
    "build": "npm run clean && npm run compile",
    "doc": "typedoc --options typedoc.json",
    "test": "npm run test:unit",
    "test:unit": "mocha 'test/unit/**/*.test.ts'",
    "test:e2e": "mocha 'test/e2e/**/*.test.ts'",
    "test:doc": "mocha 'test/doc/**/*.test.ts'",
    "coverage": "nyc npm run test",
    "repl": "DEBUG_DEPTH=10 ts-node ./tools/repl",
    "lint": "eslint --ext=ts,js --max-warnings=0 .",
    "fmt": "prettier -w ."
  },
  "dependencies": {
    "@leancloud/adapter-types": "^4.0.0",
    "@types/lodash": "^4.14.162",
    "@types/uuid": "^8.3.0",
    "base64-arraybuffer": "^0.2.0",
    "debug": "^4.2.0",
    "eventemitter3": "^4.0.7",
    "leancloud-realtime": "^5.0.0-rc.3",
    "leancloud-realtime-plugin-live-query": "^1.2.0",
    "lodash": "^4.17.20",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@leancloud/platform-adapters-browser": "^1.4.0",
    "@leancloud/platform-adapters-node": "^1.4.0",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.12.0",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "prettier": "2.1.2",
    "rollup": "^2.32.1",
    "rollup-plugin-analyzer": "^3.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^4.1.2",
    "should": "^13.2.3",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3",
    "typedoc": "^0.19.2",
    "typedoc-neo-theme": "^1.0.10",
    "typescript": "^4.0.3"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ]
